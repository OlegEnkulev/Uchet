<Page x:Class="Uchet.Pages.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Uchet.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminPage" FontFamily="Century Gothic" FontSize="14">
    
    <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Center">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Пользователи" Margin="5" x:Name="UserControlBTN" Click="UserControlBTN_Click"/>
            <Button Content="Группы" Margin="5" x:Name="GroupsControlBTN" Click="GroupsControlBTN_Click"/>
            <Button Content="Предметы" Margin="5" x:Name="SubjectsControlBTN" Click="SubjectsControlBTN_Click"/>
            <Button Content="Топики" Margin="5" x:Name="TopicsControlBTN" Click="TopicsControlBTN_Click"/>
            <Button Content="Выход" Margin="5" x:Name="ExitBTN" Click="ExitBTN_Click"/>
        </StackPanel>
        <Frame x:Name="AdminFrame" HorizontalAlignment="Stretch" Height="350" Margin="5"/>
    </StackPanel>
</Page>
