<Page x:Class="Uchet.Pages.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Uchet.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminPage" FontFamily="Century Gothic" FontSize="14">

    <Border Margin="5" Background="#3d3549" CornerRadius="10" BorderThickness="2" BorderBrush="White" HorizontalAlignment="Center" VerticalAlignment="Center" Width="250">
        <StackPanel>
            <Button Content="Управление пользователями" Margin="5" x:Name="UserControlBTN" Click="UserControlBTN_Click"/>
            <Button Content="Управление группами" Margin="5" x:Name="GroupsControlBTN" Click="GroupsControlBTN_Click"/>
            <Button Content="Управление предметами" Margin="5" x:Name="SubjectsControlBTN" Click="SubjectsControlBTN_Click"/>
            <Button Content="Управление новостями" Margin="5" x:Name="NewsControlBTN" Click="NewsControlBTN_Click"/>
            <Button Content="Выход" Margin="5" x:Name="ExitBTN" Click="ExitBTN_Click"/>
        </StackPanel>
    </Border>
</Page>
