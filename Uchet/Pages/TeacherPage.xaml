<Page x:Class="Uchet.Pages.TeacherPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Uchet.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TeacherPage" FontFamily="Century Gothic" FontSize="14">

    <Grid>
        <Border Margin="5" Background="#3d3549" CornerRadius="10" BorderThickness="2" BorderBrush="White" HorizontalAlignment="Center" VerticalAlignment="Center" Width="250">
            <StackPanel x:Name="SubjectsSP">
                <Button x:Name="OpenSubjectPageBTN" Click="OpenSubjectPageBTN_Click" Content="Просмотр и изменение оценок" Margin="5"/>
                <Button x:Name="ExitBTN" Click="ExitBTN_Click" Content="Назад" Margin="5"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
