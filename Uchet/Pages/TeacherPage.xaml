<Page x:Class="Uchet.Pages.TeacherPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Uchet.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TeacherPage" FontFamily="Century Gothic" FontSize="14">

    <Grid>
        <Border Margin="5" Background="#3d3549" CornerRadius="10" BorderThickness="2" BorderBrush="White" HorizontalAlignment="Center" VerticalAlignment="Center" Width="250">
            <StackPanel>
                <Button Content="МДК 05.01" Margin="5" x:Name="UserControlBTN"/>
                <Button Content="Ввести новый предмет" Margin="5" x:Name="NewSubjectBTN" Click="NewSubjectBTN_Click"/>
                <Button Content="Выход" Margin="5" x:Name="ExitBTN" Click="ExitBTN_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
