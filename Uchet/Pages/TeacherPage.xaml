<Page x:Class="Uchet.Pages.TeacherPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Uchet.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TeacherPage" FontFamily="Century Gothic" FontSize="14">

    <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Center">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Label Content="Ваш айди: ххх" Foreground="White" x:Name="IdLabel" Margin="5"/>
            <Button Content="Предметы" x:Name="SubjectsBTN" Click="SubjectsBTN_Click" Margin="5"/>
            <Button Content="Топики" x:Name="TopicsBTN" Click="TopicsBTN_Click" Margin="5"/>
            <Button Content="Привязка студентов" x:Name="UsersTopicsBTN" Click="UsersTopicsBTN_Click" Margin="5"/>
            <Button Content="Оценки" x:Name="CheckGradesBTN" Click="CheckGradesBTN_Click" Margin="5"/>
            <Button Content="Выставление оценок" x:Name="GradesBTN" Click="GradesBTN_Click" Margin="5"/>
            <Button Content="Выход" x:Name="Exit" Click="Exit_Click" Margin="5"/>
        </StackPanel>
        <Frame x:Name="TeacherFrame" HorizontalAlignment="Stretch" Height="350" Margin="5"/>
    </StackPanel>
</Page>
