<Page x:Class="Uchet.Pages.AddNewGroup"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Uchet.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddNewGroup" FontFamily="Century Gothic" FontSize="14">

    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                <Label Content="Название:" Width="100" Foreground="White"/>
                <TextBox x:Name="NameBox" Width="180"/>
            </StackPanel>
            <Label Content="Описание:" HorizontalAlignment="Center" Foreground="White"/>
            <TextBox x:Name="DescriptionBox" Margin="5" Width="400" Height="200"/>
            <Button x:Name="SaveBTN" Content="Сохранить" Margin="5" Width="250" Click="SaveBTN_Click"/>
            <Button x:Name="ExitBTN" Content="Выйти" Margin="5" Width="250" Click="ExitBTN_Click"/>
    </StackPanel>
</Page>
